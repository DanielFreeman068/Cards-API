<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>War - Card Game</title>
    <link rel="stylesheet" href="/public/war.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
<body>

    <button id="exit-btn"><a href="/">Exit</a></button>
    <div id="reset-overlay">
        <button id="reset-btn">Reset</button>
    </div>

    <h1>War Card Game</h1>

    <div id="round-result"></div>

    <div id="player-score"></div>
    <div id="computer-score"></div>

    <!-- Card Display for Player and Computer -->
    <div id="computer-card" class="card" style="display:none;">
        <img src="" alt="Computer's Card">
    </div>
    
    <div id="player-card" class="card" style="display:none;">
        <img src="" alt="Player's Card">
    </div>

    <button id="draw-btn">Draw Cards</button>

    <script src="/public/war.js"></script>
</body>
</html>
